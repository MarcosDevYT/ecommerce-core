# NEON DB (PostgreSQL)
# Get this from your Neon Console (https://console.neon.tech)
DATABASE_URL="postgresql://user:password@host/neondb?sslmode=require"

# Redis URL (Cache & Analytics)
# Recommended: Upstash (https://upstash.com)
REDIS_URL="rediss://default:token@host:port"

# Google OAuth (Authentication)
# Get from Google Cloud Console -> Credentials
GOOGLE_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_SECRET="your_google_client_secret"

# Admin Secret Key
# Used for manually changing user roles via the /api/auth/set-role-secret route
ADMIN_SECRET_KEY="a_very_secure_random_string"

# JWT Secret
# Used for signing session tokens
JWT_SECRET="another_secure_random_string"

# Stripe (Payments)
# Get from Stripe Dashboard -> Developers -> API Keys
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
# Webhook secret from Stripe CLI or Dashboard
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email Service (Nodemailer or Resend)
# Set to 'true' to use Nodemailer
USE_NODEMAILER="true"
EMAIL_FROM="Ecommerce Core <onboarding@resend.dev>"

# Option 1: Simple Nodemailer (Gmail, Outlook, etc.)
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Option 2: Advanced Nodemailer (Custom SMTP)
SMTP_HOST="smtp.ethereal.email"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# Option 3: Resend (Recommended for Production)
# If USE_NODEMAILER is false, provide Resend API Key
RESEND_API_KEY="re_..."

# Frontend URL
# Used for redirecting after payment or password reset
FRONTEND_URL="http://localhost:3000"
